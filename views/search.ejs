<% include ./partials/header %>
<div class="container">
  <img src="images/background.jpg" id="bg" alt="">
  <div class="row" id="search-form-div">
    <h1 class="text-center heading">Find Things To Do</h1>
    <div class="well">
      <form action="/activities" method="get" id="search-form">
        <div class="form-group">
          <input class="form-control text-center" type="text" name="destination" value="" placeholder="Destination" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Destination'"> 
        </div>
        <div class="form-group">
          <input class="form-control text-center" type="text" name="daterange" value="" placeholder="Start/End Dates" readonly> 
        </div>
        <div class="form-group">
          <h3 class="heading">Activities</h3>
          <label class="checkbox-inline no_indent"><input type="checkbox" name="activities" value="music">Music</label>
          <label class="checkbox-inline no_indent"><input type="checkbox" name="activities" value="sports">Sports</label>
          <label class="checkbox-inline no_indent"><input type="checkbox" name="activities" value="arts">Arts & Theater</label>
          <label class="checkbox-inline no_indent"><input type="checkbox" name="activities" value="restaurants">Restaurants</label>
          <label class="checkbox-inline no_indent"><input type="checkbox" name="activities" value="nightlife">Nightlife</label>
          <label class="checkbox-inline no_indent"><input type="checkbox" name="activities" value="tours">Tours</label>
        </div>
        <div class="form-group">
          <input class="form-control text-center btn btn-success" type="submit" value="Search"> 
        </div>
      </form>
    </div>
  </div>
  <a href="/logout">Logout</a>
</div>
<% include ./partials/footer %>